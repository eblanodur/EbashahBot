# –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ
@dp.message(Command("start"))
async def start(msg: Message):
    kb = [[types.KeyboardButton(text="–î–∞–π –∑–∞–¥–∞–Ω–∏–µ")]]
    keyboard = types.ReplyKeyboardMarkup(keyboard=kb, resize_keyboard=True)
    await msg.answer(
        "–ó–¥–∞—Ä–æ–≤–∞, –∞–ª–∫–∞—à ‚ù§Ô∏è\n\n"
        "–ü–∏—à–∏ —Å–≤–æ–π —É—Ä–æ–≤–µ–Ω—å –æ–ø—å—è–Ω–µ–Ω–∏—è –∏–ª–∏ –∂–º–∏ –∫–Ω–æ–ø–∫—É ‚Äî —è —Å–∫–∞–∂—É, —á—Ç–æ –¥–µ–ª–∞—Ç—å –¥–∞–ª—å—à–µ.\n"
        "–ü—Ä–∏–º–µ—Ä—ã: ¬´–≤ —Ö–ª–∞–º¬ª, ¬´–Ω–∞–≤–µ—Å–µ–ª–µ¬ª, ¬´–≤ –≥–æ–≤–Ω–æ¬ª, ¬´–µ—â—ë —Ç—Ä–µ–∑–≤—ã–π¬ª",
        reply_markup=keyboard
    )

# –û—Å–Ω–æ–≤–Ω–∞—è –ª–æ–≥–∏–∫–∞
@dp.message()
async def main_handler(msg: Message):
    text = msg.text.lower().strip()

    if "–∑–∞–¥–∞–Ω–∏" in text or text == "–¥–∞–π –∑–∞–¥–∞–Ω–∏–µ":
        await msg.answer("–°–∫–∞–∂–∏ —Å–≤–æ–π —É—Ä–æ–≤–µ–Ω—å, –º—Ä–∞–∑—å:\n—Ç—Ä–µ–∑–≤—ã–π ‚Ä¢ –Ω–∞–≤–µ—Å–µ–ª–µ ‚Ä¢ —Ö–æ—Ä–æ—à–æ ‚Ä¢ –≤ —Ö–ª–∞–º ‚Ä¢ –≤ –≥–æ–≤–Ω–æ")
        return

    if any(word in text for word in ["—Ç—Ä–µ–∑–≤", "–µ—â—ë —Ç—Ä–µ–∑–≤", "—Ç–≤–µ—Ä–µ–∑"]):
        task = random.choice(levels["—Ç—Ä–µ–∑–≤—ã–π"])
    elif any(word in text for word in ["–Ω–∞–≤–µ—Å–µ–ª–µ", "–Ω–æ—Ä–º", "—Ö–æ—Ä"]):
        task = random.choice(levels["–Ω–∞–≤–µ—Å–µ–ª–µ"])
    elif any(word in text for word in ["—Ö–æ—Ä–æ—à", "–ø—å—è–Ω—ã–π", "–≤–µ—Å–µ–ª"]):
        task = random.choice(levels["—Ö–æ—Ä–æ—à–æ"])
    elif any(word in text for word in ["—Ö–ª–∞–º", "–ø–∏–∑–¥–µ", "–≤ –º—è—Å"]):
        task = random.choice(levels["–≤ —Ö–ª–∞–º"])
    elif any(word in text for word in ["–≥–æ–≤–Ω–æ", "–æ—Ç—Ö–æ–¥", "–ø–∏–∑–¥–µ—Ü"]):
        task = random.choice(levels["–≤ –≥–æ–≤–Ω–æ"])
    else:
        await msg.answer("–ù–µ –ø–æ–Ω—è–ª —Ç–≤–æ–π —É—Ä–æ–≤–µ–Ω—å, –ø—å—è–Ω–∞—è –º—Ä–∞–∑—å. –ü–∏—à–∏ –Ω–æ—Ä–º–∞–ª—å–Ω–æ.")
        return

    await msg.answer(f"<b>–¢–≤–æ—ë –∑–∞–¥–∞–Ω–∏–µ, –ª–µ–≥–µ–Ω–¥–∞:</b>\n\n{task}", disable_notification=False)

async def main():
    print("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω ‚Äî @EbashahBot")
    await dp.start_polling(bot)

if __name__ == "__main__":
    asyncio.run(main())
